{
  "compilerOptions": {
    "module": "es2015",
    "target": "ES5",
    "lib": ["ES2018", "DOM"],
    "moduleResolution": "node",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "rootDir": ".",
    "baseUrl": "./packages",
    "paths": {
      "@la1ch3/*": ["./*/src"]
    }
  }
}
