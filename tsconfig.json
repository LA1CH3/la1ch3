{
  "compilerOptions": {
    "module": "es2015",
    "target": "ES5",
    "lib": ["ES2018", "DOM"],
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "preserveSymlinks": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "packages/*", "typings/*"]
    }
  }
}
